<?xml version="1.0" encoding="UTF-8"?>  
<?xml-stylesheet href="chrome://global/skin/"?>  
<!DOCTYPE dialog SYSTEM "chrome://conetserv/locale/conetserv.dtd">

<dialog id="conetservDialog"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
    xmlns:html="http://www.w3.org/1999/xhtml"
    title="&dialog.title;" 
    buttons="accept" 
    width="640"
    height="520"
    defaultButton="null"
    onkeypress="filter(key);"
    ondialogaccept="window.close();">    

  <html:object id="conetserv" type="application/x-conetserv" style="visibility: hidden;">Plugin FAILED to load</html:object>

  <vbox>
  <!-- TODO get the address from the current tab -->
    
    <hbox>
      <textbox id="conetservUrl" 
		type="autocomplete" 
		autocompletepopup="PopupAutoCompleteRichResult"
		autocompletesearch="history"
		maxrows="6" 
		tabScrolling="true" 
		flex="1" 
		ontextentered="start();"
      onfocus="document.getElementById('conetservDialog').style.MozUserFocus='ignore'"
      value="www.fres-solutions.com">
	<hbox>
	  <image id="conetservStart" 
		  onclick="start();" tooltip="&dialog.goButtonTip;" src="chrome://browser/skin/Go-arrow.png"
        style="cursor:pointer;padding-top:5px;padding-bottom:4px;padding-right:2px;padding-left:2px;" hidden="true" />
<!--      <dropmarker allowevents="true" /> -->
	</hbox>
      </textbox>
      <button id="conetservStartButton" 
	      tooltip="&dialog.goButtonTip;" 
	      default="true"
	      onclick="start();" 
	      width="30" 
	      image="chrome://browser/skin/Go-arrow.png" 
	      style="min-width: 30px; max-width:30px;"/>
    </hbox>
    <tabbox>  
      <tabs>
        <tab id="conetservPing" label="ping" selected="true"/>
        <tab id="conetservTrace" label="traceroute"/>
        <tab id="conetservWhois" label="whois"/>  
      </tabs>  
      <tabpanels id="conetservTabs">  
         <tabpanel id="pingTab" orient="vertical">
           <textbox id="pingConsole" multiline="true" disabled="true" rows="20" flex="1" value="" />
         </tabpanel>
         <tabpanel id="tracerouteTab" orient="vertical">
           <textbox id="tracerouteConsole" multiline="true" disabled="true" rows="20" flex="1" value="" />
         </tabpanel>
         <tabpanel id="whoisTab" orient="vertical">
           <textbox id="whoisConsole" multiline="true" disabled="true" rows="20" flex="1" value="" />
         </tabpanel>
      </tabpanels>  
    </tabbox> 
  </vbox>

  <script type="application/javascript" src="dialog.js"></script>

</dialog>

